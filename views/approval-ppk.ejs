<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>SB Admin 2 - Blank</title>

  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('partials/sidebar') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include('partials/topbar') %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Approval Pengajuan</h1>

        </div>
        <!-- /.container-fluid -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
          </div>
          <div class="card-body">
              <div class="form-group">
                <label class ="font-weight-bold" for="exampleFormControlInput1">Nama Pengajuan</label>
                <p class="text-left"><%=foundPengajuan.namaPengajuan %></p>
              </div>
              <div class="form-group">
                <label class ="font-weight-bold" for="exampleFormControlInput1">Tanggal Pengajuan</label>
                <p class="text-left"><%= moment(foundPengajuan.tanggalPengajuan).format('l') %></p>
              </div>
              <div class="form-group">
                <label class ="font-weight-bold" for="exampleFormControlInput1">Mata Anggaran</label>
                <p class="text-left"><%=foundPengajuan.mak %></p>
              </div>
              <div class="form-group">
                <label class ="font-weight-bold" for="exampleFormControlInput1">Jumlah Biaya</label>
                <p class="text-left"><%=foundPengajuan.jumlahBiaya %></p>
              </div>
              <div class="form-group">
                <label class ="font-weight-bold" for="exampleFormControlSelect2">Bagian</label>
                <p class="text-left"><%=foundPengajuan.bagian %></p>
              </div>
              <div class="form-group">
                <label class ="font-weight-bold" for="exampleFormControlFile1">File Pertanggungjawaban</label>
                <a href="/documents/<%=foundPengajuan.lampiran%>"><button type="button" class="btn btn-link">Unduh</button></a>
              </div>
              <form action="/approval-ppk-<%=foundPengajuan.id%>" method="POST">
              <button type="submit" name="approval" value="true" class="btn btn-success">Approve</button>
              <button type="submit" name="approval" value="false" class="btn btn-danger">Reject</button>
            </form>
          </div>
        </div>

      </div>
      <!-- End of Main Content -->
      <%- include('partials/footer') %>

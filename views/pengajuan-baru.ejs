</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('partials/sidebar') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include('partials/topbar') %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Input Form Pengajuan</h1>

        </div>
        <!-- /.container-fluid -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Form Pengajuan</h6>
          </div>
          <div class="card-body">
            <form action="/pengajuan-baru" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="exampleFormControlInput1">Nama Pengajuan</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="namaPengajuan">
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput1">Tanggal Pengajuan</label>
                <input type="date" class="form-control" id="exampleFormControlInput1" name="tanggalPengajuan">
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput1">Mata Anggaran</label>
                <input type="number" class="form-control" id="exampleFormControlInput1" name="MAK">
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput1">Jumlah Biaya</label>
                <input type="number" min="0.01" step="0.01" class="form-control" id="exampleFormControlInput1" name="jumlahBiaya"/>
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect2">Bagian</label>
                <select class="form-control" id="exampleFormControlSelect2" name="bagian">
                  <option>PPP</option>
                  <option>Umum dan Kepegawaian</option>
                  <option>Hukum dan Kerjasama</option>
                  <option>Keuangan</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleFormControlFile1">File Pertanggungjawaban</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="document">
              </div>

              <button href="#" class="btn btn-primary btn-icon-split" type="submit">
                  <span class="icon text-white-50">
                      <i class="fas fa-plane"></i>
                  </span>
                  <span class="text">Submit</span>
                </button>
            </form>
          </div>
        </div>

      </div>
      <!-- End of Main Content -->
      <%- include('partials/footer') %>
